void bubbleSort(int arr[], int n) {

      bool switch = true;

      int j = 0;

      int tmp;

      while (switch) {

            switch = false;

            j++;

            for (int i = 0; i < n - j; i++) {

                  if (arr[i] > arr[i + 1]) {

                        tmp = arr[i];

                        arr[i] = arr[i + 1];

                        arr[i + 1] = tmp;

                        switch = true;

                  }

            }

      }

}
